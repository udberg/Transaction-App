    <%= image_tag('transactions.png', :class => "h-70 w-25")%>
    <%= link_to 'All my transactions', transaction_path, class: "border-bottom text-light text-decoration-none" %>
  </div>
  <div>
    <%= image_tag('transactions.png', :class => "h-70 w-25")%>
    <%= link_to 'All my external transactions', ext_transaction_path, class: "border-bottom text-light text-decoration-none" %>
  </div>
  <div>
    <%= image_tag('transactions.png', :class => "h-70 w-25")%>
    <%= link_to 'All groups', group_path, class: "border-bottom text-light text-decoration-none" %>
  </div>
</div>
