<div class='container-fluid bg-info d-flex justify-content-center'>
  <div class="d-block d-block">
    <%= image_tag('user_logo.png', :class => "h-70 w-100")%>
    <div class="text-center w-100 text-light">
      <% if @user%>
        Sign in as: <%= @user.name %>
      <% end %>
    </div>
  </div>
</div>
