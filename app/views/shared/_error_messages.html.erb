<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            The forms contains <%= pluralize(object.errors.count,"erorr") %>.
        </div>
        <ul>
            <%= object.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% end %>